    private async Task LoadFromCache()
    {
        try
        {
            isImporting = true;
            StateHasChanged();

            var json = await LocalStorage.GetReportCacheAsync();
            if (string.IsNullOrWhiteSpace(json))
            {
                ToastService.ShowWarning("No cached data found.");
                return;
            }

            var cachedConfig = System.Text.Json.JsonSerializer.Deserialize<MobileAppReportConfig>(json);
            if (cachedConfig != null)
            {
                config = cachedConfig;
                
                // Restore app identifiers
                iosAppIdentifier = config.IOSAppIdentifier ?? string.Empty;
                androidAccountIdentifier = config.AndroidAccountIdentifier ?? string.Empty;
                androidAppIdentifier = config.AndroidAppIdentifier ?? string.Empty;
                
                ToastService.ShowSuccess("Successfully loaded data from cache!");
                isFabMenuOpen = false;
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading from cache: {ex.Message}");
        }
        finally
        {
            isImporting = false;
            StateHasChanged();
        }
    }
