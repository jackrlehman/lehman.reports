            await SaveToCache();

            // ====== VALIDATION SECTION ======

            // 1. Always Required Fields (General Information)
            if (string.IsNullOrWhiteSpace(config.CreatedByName))
            {
                ToastService.ShowError("Please provide Created By Name");
                isGenerating = false;
                StateHasChanged();
